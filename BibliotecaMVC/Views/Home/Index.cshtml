@{
    ViewData["Title"] = "Bem-vindo à Biblioteca";
}

<div class="jumbotron mt-4">
    <h1 class="display-4">Bem-vindo à Biblioteca!</h1>
    <p class="lead">Gerencie seus autores e livros de forma simples e rápida.</p>
    <hr class="my-4" />
    <div class="row">
        <div class="col-md-6 mb-3">
            <a class="btn btn-primary btn-lg w-100" asp-controller="Autores" asp-action="Index">Ver Autores</a>
        </div>
        <div class="col-md-6 mb-3">
            <a class="btn btn-success btn-lg w-100" asp-controller="Livros" asp-action="Index">Ver Livros</a>
        </div>
    </div>
    <div class="alert alert-info mt-4">
        <strong>Total de autores cadastrados:</strong> @((Model != null ? Model.Count() : 0))
    </div>
</div>